<div id="question">
    <strong class="row">
    Question <%=  %>: <%= f.object.word.content %>
    </strong>
    <div class="row">
    <% f.object.word.answers.each do |answer| %>
      <div class="col-sm-1">
        <%= f.radio_button :answer_id, answer.id, checked: false %>
      </div>
      <div class="col-sm-2">
        <%= f.label answer.content, class: "font-weight-normal" %>
      </div>
    <% end %>
    </div>
</div>
