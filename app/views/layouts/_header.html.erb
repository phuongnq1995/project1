<header class="main-header">
    <%= link_to root_path, class: "logo" do %>
      <span class="logo-mini"><b>E</b></span>
      <!-- logo for regular state and mobile devices -->
      <span class="logo-lg"><b>E-LEARNING</b></span>
    <% end %>

<!--     <a href="/" class="logo">
      <span class="logo-mini"><b>E</b></span>
      <span class="logo-lg"><b>E-LEARNING</b></span>
    </a>  -->

    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
      <!-- Sidebar toggle button-->
      <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
        <span class="sr-only">Toggle navigation</span>
      </a>

      <div class="navbar-custom-menu">
        <% if logged_in? %>
        <ul class="nav navbar-nav">
          <!-- Messages: style can be found in dropdown.less-->
          <li class="dropdown user user-menu">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= gravatar_for current_user, size:19, class: "user-image", alt: "User Image" %>
              <span class="hidden-xs">
              <%= current_user.name %>
              </span>
            </a>
            <ul class="dropdown-menu">
              <!-- User image -->
              <li class="user-header">
                <%= gravatar_for current_user, class: "user-image", alt: "User Image" %>
                <p>
                  <%= current_user.name %>
                </p>
              </li>
              <!-- Menu Body -->
              <li class="user-body">
                <div class="row">
                  <div class="col-xs-4 text-center">
                    <a href="<%= followers_user_path(current_user) %>">Followers
                    <%= current_user.followers.count %>
                    </a>
                  </div>
                  <div class="col-xs-4 text-center">
                    <a href="<%= following_user_path(current_user) %>">Following
                    <%= current_user.following.count %>
                    </a>
                  </div>
                </div>
              <!-- /.row -->
              </li>
              <li><%= link_to "Profile", current_user, class: "btn btn-default btn-flat" %>
              </li>
              <!-- Menu Footer-->
              <li class="user-footer">
                <div class="pull-left">
                  <%= link_to "Settings", edit_user_path(current_user), class: "btn btn-default btn-flat" %>
                </div>
                <div class="pull-right">
                  <%= link_to "Log out", logout_path, method: "delete", class: "btn btn-default btn-flat" %>
                </div>
              </li>
            </ul>
          <% else %>
              <%= link_to "Login User", login_path, class: "btn btn-lg btn-info" %>
          <% end %>
          </li>
        </ul>
      </div>
    </nav>
  </header>
