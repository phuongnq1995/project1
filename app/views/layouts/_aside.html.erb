  <aside class="main-sidebar">
    <section class="sidebar">
      <div class="user-panel">
        <div class="pull-left image">
        <% if logged_in? %>
          <%= gravatar_for current_user, class: "user-image", alt: "User Image" %>
          </div>
          <div class="pull-left info">
            <p><%= link_to current_user.name, current_user %></p>
            <a><i class="fa fa-circle text-success"></i> Online</a>
          </div>
        <% end %>
      </div>
      <!-- /.search form -->
      <ul class="sidebar-menu">
        <li class="header">MAIN NAVIGATION</li>
        <li class="treeview">
            <%= link_to categories_path do %>
            <i class="fa fa-files-o"></i>
            <span>Categories</span>
            <% end %>

        </li>
        <% if logged_in? %>
        <li>
          <%= link_to words_path do %>
            <i class="fa fa-th"></i> <span>WordsList</span>
            <span class="pull-right-container">
              <small class="label pull-right bg-green">new</small>
            </span>
          <% end %>
        </li>
        <% end %>
        <li>
          <%= link_to users_path do %>
            <i class="fa fa-edit"></i> <span>Users List</span>
          <% end %>
        </li>
        <% if logged_in? %>
        <li class="treeview">
          <a href="#">
            <i class="fa fa-table"></i> <span>Follow</span>
            <span class="pull-right-container">
              <i class="fa fa-angle-left pull-right"></i>
            </span>
          </a>
          <ul class="treeview-menu">
            <li>
              <%= link_to followers_user_path(current_user) do %>
                <i class="fa fa-circle-o"></i>
                Follower(<%= current_user.followers.count %>)
              <% end %>
            </li>
            <li>
              <%= link_to following_user_path(current_user) do %>
                <i class="fa fa-circle-o"></i>
                Followed(<%= current_user.following.count %>)
              <% end %>
            </li>
          </ul>
        </li>
        <% end %>
      </ul>
    </section>
  </aside>
