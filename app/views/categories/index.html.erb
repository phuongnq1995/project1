<% provide(:title, 'All Category') %>
<h1>All category</h1>
<% if current_user.admin? %>
  <%= form_for(@category) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.text_area :discription, placeholder: "discription..." %>
    </div>
    <%= f.submit "Create", class: "btn btn-primary" %>
  <% end %>
<% end %>
<%= will_paginate %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Category Name</th>
        <th>Discription</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, category %></td>
        <td><%= category.discription %></td>
        <td>
          <%= form_for [category, @lesson] do |f| %>
            <%= f.submit "Start", class: "btn btn-primary btn-sm" %>
          <% end %>
        </td>
        <% if current_user.admin? %>
        <td><%= link_to "Edit", edit_category_path(category) %></td>
        <td><%= link_to "Delete", category, method: :delete,
                                  data: { confirm: "You sure?" } %></td>
         <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= will_paginate %>
